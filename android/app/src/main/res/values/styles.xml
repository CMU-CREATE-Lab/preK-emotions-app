<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- custom text appearance (see calls to TextView.setTextAppearance) -->
    <style name="textBold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textNormal">
        <item name="android:textStyle">normal</item>
    </style>


    <!-- Header -->
    <style name="AppHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="AppHeaderImages">
        <item name="android:layout_marginBottom">@dimen/header_images_margin</item>
        <item name="android:layout_marginEnd">@dimen/header_images_margin</item>
        <item name="android:layout_marginTop">@dimen/header_images_margin</item>
    </style>


    <style name="StudentSectionLayoutWithText">
        <item name="android:layout_marginBottom">40sp</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginTop">40sp</item>
    </style>
    <style name="StudentSectionLayoutNoText">
        <item name="android:layout_marginBottom">40sp</item>
        <item name="android:layout_marginEnd">55sp</item>
        <item name="android:layout_marginStart">55sp</item>
        <item name="android:layout_marginTop">40sp</item>
    </style>
    <style name="StudentSectionText">
        <item name="android:layout_marginBottom">0sp</item>
        <item name="android:layout_marginEnd">0sp</item>
        <item name="android:layout_marginStart">0sp</item>
        <item name="android:layout_marginTop">0sp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">36sp</item>
    </style>


    <!-- Grid Views -->
    <style name="TeacherSectionGridView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">40sp</item>
        <item name="android:columnWidth">165sp</item>
        <item name="android:horizontalSpacing">20dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">25sp</item>
    </style>
    <style name="StudentSectionGridView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:columnWidth">165sp</item>
        <item name="android:horizontalSpacing">20dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">spacingWidthUniform</item>
        <item name="android:verticalSpacing">25sp</item>
    </style>


    <!-- Grid View Items -->
    <style name="GridViewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">143sp</item>
        <item name="android:elevation">5sp</item>
        <item name="android:background">@drawable/card</item>
    </style>
    <style name="GridViewItemClassroomTitle" parent="textBold">
        <item name="android:layout_height">69dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/colorClassroomGridTitle</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="GridViewItemClassroomLabels">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/colorClassroomGridLabel</item>
    </style>
    <style name="GridViewItemThumbnail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/card</item>
        <!-- NOTE: margin/padding hack to avoid clipped image -->
        <item name="android:layout_marginBottom">36sp</item>
        <item name="android:paddingBottom">4sp</item>
    </style>
    <style name="GridViewItemThumbnail.CenterCrop">
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="GridViewItemThumbnail.FitCenter">
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="GridViewItemLowerTitle" parent="textBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:background">@drawable/card_half_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/grid_view_lower_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/colorGridLowerTitle</item>
        <item name="android:textSize">@dimen/grid_view_lower_text_size</item>
    </style>

    <style name="GridViewItemLowerTitle2" parent="textBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:background">@drawable/card_half_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/grid_view_lower_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/colorGridLowerTitle</item>
        <item name="android:textSize">@dimen/grid_view_lower_text_size</item>
    </style>

    <style name="GridViewItemLowerImageTitle" >
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:background">@drawable/ic_emotion_play_title</item>
    </style>

    <!-- Non-grid Items -->
    <style name="NonGridViewItem">
        <item name="android:layout_margin">40sp</item>
        <item name="android:layout_width">165sp</item>
        <item name="android:layout_height">143sp</item>
        <item name="android:elevation">5sp</item>
        <item name="android:background">@drawable/card</item>
    </style>


    <!-- Drawer Styles (fragments) -->
    <style name="DrawerTeacherSection">
        <item name="android:layout_width">@dimen/drawer_width</item>
        <item name="android:background">@color/colorDrawerBackground</item>
    </style>
    <style name="DrawerTeacherSectionHighlighted">
        <item name="android:layout_width">7sp</item>
        <item name="android:layout_height">36sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="DrawerTeacherSectionText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:textColor">@color/colorTextDrawerTitle</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
