<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/GridViewItemTeacherClassroom" >

    <TextView
        android:id="@+id/textViewClassroomName"
        style="@style/GridViewItemClassroomTitle"
        android:layout_width="0dp"
        android:text=""
        app:layout_constraintEnd_toStartOf="@id/textViewLabelStudents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStudents"
        style="@style/GridViewItemClassroomLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="##"
        android:textColor="#2d2d2d"
        android:paddingEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewLabelStudents" />

    <TextView
        android:id="@+id/textViewLabelStudents"
        style="@style/GridViewItemClassroomLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/classroom_grid_label_students"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/textViewStudents"
        app:layout_constraintTop_toTopOf="@+id/textViewClassroomName" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageStudent1"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@mipmap/ic_user"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewClassroomName"
        app:civ_border_width="1dp"
        app:civ_border_color="#5bddc5"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageStudent2"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@mipmap/ic_user"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toEndOf="@id/imageStudent1"
        app:layout_constraintTop_toBottomOf="@id/textViewClassroomName"
        app:civ_border_width="1dp"
        app:civ_border_color="#5bddc5"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageStudent3"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@mipmap/ic_user"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toEndOf="@id/imageStudent2"
        app:layout_constraintTop_toBottomOf="@id/textViewClassroomName"
        app:civ_border_width="1dp"
        app:civ_border_color="#5bddc5"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageStudent4"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@mipmap/ic_user"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toEndOf="@id/imageStudent3"
        app:layout_constraintTop_toBottomOf="@id/textViewClassroomName"
        app:civ_border_width="1dp"
        app:civ_border_color="#5bddc5"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageStudent5"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@mipmap/ic_user"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toEndOf="@id/imageStudent4"
        app:layout_constraintTop_toBottomOf="@id/textViewClassroomName"
        app:civ_border_width="1dp"
        app:civ_border_color="#5bddc5"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageStudent6"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@mipmap/ic_user"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toEndOf="@id/imageStudent5"
        app:layout_constraintTop_toBottomOf="@id/textViewClassroomName"
        app:civ_border_width="1dp"
        app:civ_border_color="#5bddc5"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageStudent7"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@mipmap/ic_user"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toEndOf="@id/imageStudent6"
        app:layout_constraintTop_toBottomOf="@id/textViewClassroomName"
        app:civ_border_width="1dp"
        app:civ_border_color="#5bddc5"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageStudent8"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@mipmap/ic_user"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toEndOf="@id/imageStudent7"
        app:layout_constraintTop_toBottomOf="@id/textViewClassroomName"
        app:civ_border_width="1dp"
        app:civ_border_color="#5bddc5"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageStudentMore"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@mipmap/ic_class"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toEndOf="@id/imageStudent8"
        app:layout_constraintTop_toBottomOf="@id/textViewClassroomName"
        app:civ_border_width="1dp"
        app:civ_border_color="#5bddc5"
        />

</android.support.constraint.ConstraintLayout>